<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="#f7f4f4"
    android:gravity="center"
    tools:context="test.project.together.main.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/snsdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:text="2017.10.4"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/snstext"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="left"
                android:textColor="#000"
                android:text="Test SNS 즐거운추석!"/>
        </LinearLayout>

        <Button
            android:id="@+id/sharebtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/share"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/snslike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/like1"
                android:gravity="center"
                android:text="2"
                android:textColor="#fff" />

            <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/snscomment"
            android:text="COMMENT"
            android:textSize="30dp"
            android:textColor="#fff"
            android:background="#F15F5F"
            android:layout_weight="1"/>
    </LinearLayout>

    </LinearLayout>


</LinearLayout>
